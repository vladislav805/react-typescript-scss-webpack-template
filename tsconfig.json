{
    "compilerOptions": {
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": ["dom", "es6"],
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "isolatedModules": true,
        "baseUrl": "src",
        "strict": true,
        "alwaysStrict": true,
        "verbatimModuleSyntax": true,
        "paths": {
            "@components/*": ["components/*"],
            "@lib/*": ["lib/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}
